<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="310dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="James Wilson"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@id/image_card"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="posted"
        app:layout_constraintLeft_toLeftOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/txt_name" />

    <TextView
        android:id="@+id/txt_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="2h"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_clock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_clock"
        android:layout_marginLeft="2dp"
        app:layout_constraintRight_toLeftOf="@id/txt_hour"
        app:layout_constraintTop_toTopOf="@id/txt_hour" />

    <androidx.cardview.widget.CardView
        android:id="@+id/photo_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintLeft_toLeftOf="@id/image_card"
        app:layout_constraintTop_toBottomOf="@id/image_card">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/apple"
            tools:ignore="MissingConstraints,NotSibling" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/icon_heartReact"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginVertical="8dp"
        android:src="@drawable/ic_hearticon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_reactCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/icon_heartReact"
        app:layout_constraintLeft_toRightOf="@id/icon_heartReact"
        app:layout_constraintTop_toTopOf="@id/icon_heartReact" />

    <TextView
        android:id="@+id/txt_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="k"
        app:layout_constraintBottom_toBottomOf="@id/txt_reactCount"
        app:layout_constraintLeft_toRightOf="@id/txt_reactCount"
        app:layout_constraintTop_toTopOf="@id/txt_reactCount" />

    <ImageView
        android:id="@+id/icon_msg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_msgicon"
        app:layout_constraintBottom_toBottomOf="@id/icon_heartReact"
        app:layout_constraintLeft_toLeftOf="@id/icon_heartReact"
        app:layout_constraintRight_toRightOf="@id/icon_share" />


    <TextView
        android:id="@+id/msg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:text="98"
        app:layout_constraintBottom_toBottomOf="@id/icon_msg"
        app:layout_constraintLeft_toRightOf="@id/icon_msg"
        app:layout_constraintTop_toTopOf="@id/icon_msg" />

    <ImageView
        android:id="@+id/icon_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginVertical="8dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/share_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="@id/icon_share"
        app:layout_constraintLeft_toRightOf="@id/icon_share"
        app:layout_constraintTop_toTopOf="@id/icon_share" />


</androidx.constraintlayout.widget.ConstraintLayout>
